{
  "name": "donation-system-webapp",
  "version": "1.0.0",
  "description": "Survival's donation page frontend",
  "scripts": {
    "linter": "eslint public/javascripts/src/*js public/javascripts/spec/*js",
    "uglify": "uglifyjs public/javascripts/src/ui.js public/javascripts/src/stripe_wrapper.js -c -m -o public/javascripts/bundle.js",
    "watch:js": "watch 'npm run uglify && npm run linter' public/javascripts/src public/javascripts/spec",
    "watch:erb": "watch '. ./test.sh' views",
    "test": "npm run watch:js & npm run watch:erb & bundle exec rackup & wait"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/survival/donation-system-webapp.git"
  },
  "keywords": [
    "sinatra",
    "clean-architecture",
    "donation-form"
  ],
  "author": "Survival's web team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/survival/donation-system-webapp/issues"
  },
  "homepage": "https://github.com/survival/donation-system-webapp#readme",
  "devDependencies": {
    "eslint": "^4.10.0",
    "uglify-js": "^3.1.6",
    "watch": "^1.0.2"
  }
}
